{% extends "@User/layout.html.twig" %}
{% block title %}{{ parent() }}Mot de passe oublié{% endblock %}
{% block body %}

    {% if form is defined %}
        <div class="well col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
            <form method="post" method="POST" action="{{ path('user_password_forgotten') }}">
                <legend><span class="fa fa-unlock"></span> Mot de passe oublié</legend>
                {{ form_widget(form) }}
                {{ form_rest(form) }}
                <!-- <input type="submit" class="btn btn-primary" /> -->
                {% if error_message is not null %}
                    <p class="alert alert-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> {{ error_message }}</p>
                {% endif %}
                <button type="submit" class="btn btn-primary pull-right">Demander la réinitialisation <span
                            class="glyphicon glyphicon-refresh"></span></button>
            </form>
        </div>
    {% else %}
        <div class="jumbotron">
            <h3 class="text-center"><span class="fa fa-unlock"></span> Mot de passe oublié</h3>
            <p class="text-muted"><span class="fa fa-info-circle"></span>  Nous vous avez envoyé un lien qui vous permettra de réinitialiser votre mot de passe <br>Allez donc consulter votre boite mail !</p>
        </div>
    {% endif %}



{% endblock %}
