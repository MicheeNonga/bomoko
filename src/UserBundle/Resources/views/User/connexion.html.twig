{% extends "@User/layout.html.twig" %}
{% block title %}{{ parent() }}Connexion{% endblock %}
{% block body %}
<form class="well col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12" method="POST" action="{{ path('user_login_check') }}">
	<legend>Connexion à Bomoko<span class="glyphicon glyphicon-leaf"></span></legend>
	<div class="form-group"><label><span class="glyphicon glyphicon-envelope"></span> Email</label><input type="email" required="true" name="_username" placeholder="username" class="form-control" value="{{ last_username }}"></div>
	<div class="form-group"><label><span class="glyphicon glyphicon-lock"></span> Mot de passe</label><input type="password" required="true" name="_password" placeholder="password" class="form-control"></div>
	<div class="form-group"><input type="checkbox" id="remember_me" name="_remember_me" checked> <label for="remember_me">Se souvenir de moi</label></div>
	<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
	{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<div class="form-group"><button type="submit" class="btn btn-primary pull-right">Connexion <span class="fa fa-sign-in"></span></button>
		<br> </div>
	<!-- <input type="submit" name="" value="Connexion" class="btn btn-primary btn-block"> -->
	<div class="form-group"><a href="{{ path('user_password_forgotten') }}" class="btn btn-link"><span class="fa fa-unlock"></span> Mot de passe oublié</a>
		<a href="{{ path('user_signin') }}" class="btn btn-link"><span class="fa fa-user-plus"></span> Inscription</a>
	</div>
</form>
{% endblock %}
