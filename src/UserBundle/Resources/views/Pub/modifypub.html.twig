{% extends "@User/layout.html.twig" %}
{% block title %}{{ parent() }} {{pub.titre}} {% endblock %}
{% block body %}

<div class="row">
	<div class="well col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
		<form method="post"  method="POST" action="{{ path('pub_modify', {'pub':pub.id} ) }}" enctype="multipart/form-data">
			<legend><span class="glyphicon glyphicon-pencil"></span>Modifier la publication</legend>
			
			{{ form_label(form.deleteFiles) }}
			{% for fileField in form.deleteFiles %}
			<p>
				{{ form_errors(fileField) }}
				{{ form_widget(fileField) }}
				<img alt="" src="{{ asset('files/pub/images/' ~ fileField.vars.label) }}" width="100px" height="100px" class="img-responsive thumbnail">
			</p>
			{% endfor %}


			{{ form_widget(form) }}
			{{ form_rest(form) }}
			<button type="submit" class="btn btn-default">Enregistrer <span class="glyphicon glyphicon-floppy-disk"></span></button>
		</form>
	</div>
</div>


{% endblock %}